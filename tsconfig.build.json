{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sen-ui/*": ["src/*"] // (optional alias for your library source)
    }
  },
  "include": ["src/**/*"], // only your library code
  "exclude": ["app", "node_modules"]
}
